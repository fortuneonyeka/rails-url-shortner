<div class="main-wrapper">
  <div class="container text-center">
  <div class="row justify-content-center"><%= render partial: "shared/flash"%></div>
    
   <h2>Shorten Url</h2>
    <div class="row justify-content-center">
        <div class="col-6">
          <%= form_with model: @url do |form| %>
          <%= form.text_field :name, class: "form-control p-3", placeholder: "Enter your url here" %>
          <%= form.submit "Create Url", class: "btn btn-outline-success mt-4 col-4 p-3",id: "create-url-button" %>
          <% end %>
        
        </div>
    </div>
  </div>
</div>
